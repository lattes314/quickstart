\mode<presentation>

% Requirements

\RequirePackage{amsmath,amssymb}
\RequirePackage{tikz}
\RequirePackage{pgfplots}
\RequirePackage{graphicx}

% Set themes
\usecolortheme{lmpsecker}
\useinnertheme{lmpsecker}
\useoutertheme{lmpsecker}

% Customize
\setbeamertemplate{navigation symbols}{}

% -------------------- Custom recap frame

\newenvironment{RecapFrame}[1]
{
    \setbeamercolor{background canvas}{bg=mybg}
    \setbeamercolor{block title}{bg=myhg, fg=white}
    \begin{frame}
        \frametitle{Synth√®se : #1}
        }{
    \end{frame}
}

% ---------------------- To animate pgfplots-

\tikzset{
    invisible/.style={opacity=0},
    visible on/.style={alt={#1{}{invisible}}},
    alt/.code args={<#1>#2#3}{%
            \alt<#1>{\pgfkeysalso{#2}}{\pgfkeysalso{#3}} % \pgfkeysalso doesn't change the path
        },
}

\mode<all>

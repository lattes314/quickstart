    \begin{tikzpicture}
      \useasboundingbox(0,0) rectangle(\the\paperwidth,1.2);
      {\node[anchor=west, font=\large] at (0.25,0.61){\bfseries\insertframetitle};}
    \end{tikzpicture}
  \end{beamercolorbox}
  \vspace{-1em}
}


\mode<presentation>

% Define colors
\definecolor{lmpsblue}{RGB}{25,40,85}
\definecolor{lmpsgrey}{RGB}{130,130,130}
\definecolor{toolred}{RGB}{255,70,60}
\definecolor{toolorange}{RGB}{255,160,40}
\definecolor{toolrose}{RGB}{255,60,255}
\definecolor{toolblue}{RGB}{100,140,255}
\definecolor{toolgreen}{RGB}{0,200,140}
\definecolor{toolviolet}{RGB}{130,30,255}

% Define custom colors for the Recap frame
\definecolor{mybg}{RGB}{179, 206, 155}         % background
\definecolor{myhg}{RGB}{102, 136, 71}          % highlight

% Font color
\setbeamercolor{normal text}{fg=lmpsblue}

% Title page
\setbeamercolor*{title page header}{fg=white}
\setbeamercolor*{author}{fg=lmpsblue}
\setbeamercolor*{institute}{fg=lmpsblue}
\setbeamercolor*{date}{fg=lmpsblue}

% Structure palette
\setbeamercolor{palette primary}{bg=lmpsblue,fg=white}
\setbeamercolor{palette secondary}{bg=lmpsgrey,fg=white}
\setbeamercolor{palette tertiary}{bg=lmpsblue,fg=white}
\setbeamercolor{palette quaternary}{bg=lmpsblue,fg=white}
\setbeamercolor{structure}{fg=lmpsblue} % itemize, enumerate, etc
\setbeamercolor{section in toc}{fg=lmpsblue} % TOC sections


% Blocks
\setbeamercolor{block title}{fg=white,bg=lmpsblue}
\setbeamercolor{block body}{fg=lmpsblue,bg=lmpsblue!10}
\setbeamercolor{block title alerted}{fg=white,bg=toolred}
\setbeamercolor{block body alerted}{fg=lmpsblue,bg=lmpsblue!10}
\setbeamercolor{block title example}{fg=white,bg=toolgreen}
\setbeamercolor{block body example}{fg=toolgreen,bg=toolgreen!10}
\setbeamercolor{background canvas}{bg=white}

\setbeamercolor{alerted text}{fg=toolred}
\setbeamercolor{example text}{fg=toolgreen}

\mode<all>
